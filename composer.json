{
    "name": "php-di/slim-bridge",
    "description": "PHP-DI integration in Slim",
    "license": "MIT",
    "type": "library",
    "autoload": {
        "psr-4": {
            "DI\\Bridge\\Slim\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DI\\Bridge\\Slim\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=5.4",
        "php-di/php-di": "~5.0",
        "php-di/invoker": "dev-separate_resolver as 1.99.99",
        "slim/slim": "dev-simpler_callable_handling@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.5"
    },
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/mnapoli/Slim.git"
        }
    ]
}
